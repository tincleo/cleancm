---
export interface Props {
	title: string;
	description: string;
	image: string;
	link: string;
}

const { title, description, image, link } = Astro.props;
---

<div class="service-card">
	<img src={image} alt={title} />
	<div class="content">
		<h2>{title}</h2>
		<p>{description}</p>
		<a href={link} class="more-details">More Details</a>
	</div>
</div>

<style>
	.service-card {
		background-color: #23262d;
		border-radius: 8px;
		overflow: hidden;
		transition: transform 0.3s ease;
	}

	.service-card:hover {
		transform: translateY(-5px);
	}

	img {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}

	.content {
		padding: 1.5rem;
	}

	h2 {
		font-size: 1.5rem;
		margin: 0 0 1rem 0;
		color: rgb(var(--accent-light));
	}

	p {
		margin: 0 0 1rem 0;
	}

	.more-details {
		display: inline-block;
		background-color: rgb(var(--accent));
		color: white;
		padding: 0.5em 1em;
		border-radius: 0.25em;
		text-decoration: none;
		font-weight: bold;
		transition: background-color 0.3s ease;
	}

	.more-details:hover {
		background-color: rgb(var(--accent-light));
	}
</style>