---
export interface Props {
	title: string;
	image: string;
	link: string;
}

const { title, image, link } = Astro.props;
---

<a href={link} class="service-card">
	<div class="image-container">
		<img src={image} alt={title} />
		<div class="title-overlay">
			<h3>{title}</h3>
		</div>
	</div>
</a>

<style>
	.service-card {
		display: block;
		border-radius: 8px;
		overflow: hidden;
		text-decoration: none;
		color: white;
		transition: transform 0.2s ease-in-out;
		position: relative;
		height: 250px; /* Adjust this value as needed */
	}

	.service-card:hover {
		transform: translateY(-5px);
	}

	.image-container {
		width: 100%;
		height: 100%;
		position: relative;
	}

	img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.title-overlay {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 100%);
		padding: 1rem;
		display: flex;
		align-items: flex-end;
		justify-content: center;
		height: 50%; /* Adjust this value to control the gradient height */
	}

	h3 {
		font-size: 1.2rem;
		margin: 0;
		text-align: center;
		text-shadow: 1px 1px 2px rgba(0,0,0,0.8);
	}
</style>