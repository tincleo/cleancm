---
export interface Props {
	title: string;
	image: string;
	link: string;
}

const { title, image, link } = Astro.props;
---

<a href={link} class="service-card">
	<img src={image} alt={title} />
	<h3>{title}</h3>
</a>

<style>
	.service-card {
		display: block;
		background-color: #23262d;
		border-radius: 8px;
		overflow: hidden;
		text-decoration: none;
		color: white;
		transition: transform 0.2s ease-in-out;
	}

	.service-card:hover {
		transform: translateY(-5px);
	}

	img {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}

	h3 {
		padding: 1rem;
		font-size: 1.2rem;
		margin: 0;
		text-align: center;
	}
</style>