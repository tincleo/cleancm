---
import Layout from '../layouts/Layout.astro';

const projects = [
	{
		title: "Luxury Home Deep Clean",
		description: "Complete deep cleaning of a 5,000 sq ft luxury home, including all living areas, bedrooms, and bathrooms.",
		image: "https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
	},
	{
		title: "Office Building Maintenance",
		description: "Ongoing cleaning and maintenance for a 10-story office building, including daily cleaning of common areas and weekly deep cleans.",
		image: "https://images.unsplash.com/photo-1497366216548-37526070297c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2069&q=80"
	},
	{
		title: "Post-Construction Cleanup",
		description: "Thorough cleaning of a newly constructed residential complex, preparing 20 units for occupancy.",
		image: "https://images.unsplash.com/photo-1503387762-592deb58ef4e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2071&q=80"
	},
	{
		title: "Restaurant Deep Clean",
		description: "Overnight deep cleaning of a high-end restaurant, including kitchen, dining area, and restrooms.",
		image: "https://images.unsplash.com/photo-1590846406792-0adc7f938f1d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2069&q=80"
	}
];
---

<Layout title="Our Work - Alpha Cleaning">
	<main>
		<h1>Our Work</h1>
		<p class="intro">Take a look at some of our recent cleaning projects. We pride ourselves on delivering exceptional results for every client.</p>
		<div class="project-grid">
			{projects.map((project) => (
				<div class="project-card">
					<img src={project.image} alt={project.title} />
					<div class="project-info">
						<h2>{project.title}</h2>
						<p>{project.description}</p>
					</div>
				</div>
			))}
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 100%;
		max-width: 1200px;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
		color: rgb(var(--accent-light));
	}
	.intro {
		text-align: center;
		margin-bottom: 2rem;
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
	}
	.project-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}
	.project-card {
		background-color: #23262d;
		border-radius: 8px;
		overflow: hidden;
		transition: transform 0.3s ease;
	}
	.project-card:hover {
		transform: translateY(-5px);
	}
	.project-card img {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}
	.project-info {
		padding: 1.5rem;
	}
	.project-info h2 {
		font-size: 1.5rem;
		margin: 0 0 1rem 0;
		color: rgb(var(--accent-light));
	}
	.project-info p {
		margin: 0;
		font-size: 1rem;
	}
</style>